#!/usr/bin/env bash
set -euo pipefail

manifest="${1:-${DOTFILES_DIR:-$HOME/.dotfiles}/uv-tools.txt}"
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

uv tool upgrade --all

if command -v uv-tools-export >/dev/null 2>&1; then
  uv-tools-export "$manifest"
else
  "$script_dir/uv-tools-export" "$manifest"
fi
